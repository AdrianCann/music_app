<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
</head>
<body>

  <% if flash[:errors] %>

    <% flash[:errors].each do |error| %>
      <%= error %>
    <% end %>

  <% end %>

  <br>

<% if current_user.nil? %>
  <%=link_to "Log In", new_session_url %>
  <br>
  <%=link_to "Sign Up", new_user_url %>

  <% else %>
  <%= "Hi #{current_user.email}, you are logged in!" %>

  <br>

  <%=button_to "Sign Out", session_url(current_user), method: :delete %>

<% end %>

<%= yield %>

</body>
</html>
